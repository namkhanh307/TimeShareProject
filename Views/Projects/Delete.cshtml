@model TimeShareProject.Models.Project

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Project</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayNameFor(model => model.ShortName)
        </dt>
        <dd class="col-sm-10" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayFor(model => model.ShortName)
        </dd>
        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10 " style="margin-top:5px;margin-bottom:5px;">
            <iframe src="@Model.Address" width="500" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </dd>
        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayNameFor(model => model.TotalUnit)
        </dt>
        <dd class="col-sm-10" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayFor(model => model.TotalUnit)
        </dd>

        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            Images
        </dt>
        <dd class="col-sm-10" style="margin-top:5px;margin-bottom:5px;">
            <div class="row">
                <div class="col-sm-4">
                    <img class="img-fluid" style="height: 200px; width:300px" src="~/img/@Model.Image1" />
                </div>
                <div class="col-sm-4">
                    <img class="img-fluid" style="height: 200px; width:300px" src="~/img/@Model.Image2" />
                </div>
                <div class="col-sm-4">
                    <img class="img-fluid" style="height: 200px; width:300px" src="~/img/@Model.Image3" />
                </div>
            </div>
        </dd>

        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayNameFor(model => model.GeneralDescription)
        </dt>
        <dd class="col-sm-10" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayFor(model => model.GeneralDescription)
        </dd>
        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayNameFor(model => model.DetailDescription)
        </dt>
        <dd class="col-sm-10" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayFor(model => model.DetailDescription)
        </dd>
        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10" style="margin-top:5px;margin-bottom:5px;">
            @if (Model.Status.Value == true)
            {
                <span>Active</span>
            }
            else
            {
                <span>Inactive</span>
            }
        </dd>
        <dt class="col-sm-2" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayNameFor(model => model.Star)
        </dt>
        <dd class="col-sm-10" style="margin-top:5px;margin-bottom:5px;">
            @Html.DisplayFor(model => model.Star)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

    

